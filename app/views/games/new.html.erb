<div class="container">
  <h1>New Game</h1>
</div>
<div class="container">
  <div class="grid">
    <% @letters.each do |letter| %>
      <div class="letter"><%= letter %></div>
    <% end %>
  </div>
</div>
<div class="container">
  <form action="/score" method="post" class="form-inline">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="form-group">
      <input id="grid" name="grid" type="hidden" value=<%= @letters.join("") %> />
      <input type="text" name="word"class="form-control word" placeholder="Type your longest word here">
      <input type="submit" value="play" class="form-control btn btn-primary">
    </div>
  </form>
</div>

